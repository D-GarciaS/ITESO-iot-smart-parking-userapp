<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.iteso.iot.androidappiot.ActivityMain"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_above="@id/ActivityMain_send_btn"
        android:layout_weight="85"
        >

        <ImageButton
            android:id="@+id/ActivityMain_conductor_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_drive_eta_white_96dp"
            android:layout_margin="5dp"

            />

        <ImageButton
            android:id="@+id/ActivityMain_pass1_btn"
            android:layout_toRightOf="@id/ActivityMain_conductor_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_person_add_white_96dp"
            android:layout_margin="5dp"
            />

        <ImageButton
            android:id="@+id/ActivityMain_pass2_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_person_add_white_96dp"
            android:layout_margin="5dp"
            />

        <ImageButton
            android:id="@+id/ActivityMain_pass3_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_person_add_white_96dp"
            android:layout_margin="5dp"

            />

    </GridLayout>

    <Button
        android:id="@+id/ActivityMain_send_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:text="Enviar"
        android:layout_weight="15"
        android:layout_gravity="bottom"
        />
</LinearLayout>
